<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/lang_detail_image"
                    >

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="24dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Back"
                        android:src="@drawable/ic_arrow_back" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="end"
                        android:layout_marginTop="170dp"
                        android:padding="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intermediate English"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:letterSpacing="-0.05"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Origin from Padang, Sumatera Barat"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/bg_lang_detail" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">

                    <!-- Learners -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="32dp"
                            android:src="@drawable/lang_detail_image_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120"
                            android:textSize="13sp"
                            android:letterSpacing="-0.02"
                            android:textColor="@color/colorTextPrimary"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Progress -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Replace with Circular ProgressBar if needed -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80 %"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@drawable/bg_lang_detail_progress_circle"
                            android:padding="12dp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress"
                            android:textSize="13sp"
                            android:letterSpacing="-0.02"
                            android:textColor="@color/colorTextPrimary"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <!-- Fav -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="32dp"
                            android:src="@drawable/lang_detail_image_2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fav"
                            android:textSize="13sp"
                            android:letterSpacing="-0.02"
                            android:textColor="@color/colorTextPrimary"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvDescriptionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Description"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    />

                <!-- Description Body -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minangkabau, or Baso Minang in its native language, is an Austronesian language spoken by the Minangkabau people in West Sumatra and western Riau, as well as by those who have migrated to other cities in Indonesia."
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"

                    android:layout_marginHorizontal="16dp"
                    />

                <!-- Learn Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="32dp"
                    android:layout_marginVertical="60dp"
                    >
                    <Button
                        android:id="@+id/btnLearn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn Language"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:letterSpacing="-0.04"
                        android:padding="16dp"
                        android:background="@drawable/bg_lang_detail_button"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <include
        layout="@layout/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>