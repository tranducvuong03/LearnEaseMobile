                        android:paddingEnd="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/bg_status_chip_done"
                        android:layout_gravity="end|top"
                        android:layout_margin="8dp"
                        android:visibility="gone" />

                    <LinearLayout
