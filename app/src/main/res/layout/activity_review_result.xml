<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- ✅ Chỉ có 1 child duy nhất: LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="32dp">

        <!-- Đáp án gốc (reference text) -->
        <TextView
            android:id="@+id/textReference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đáp án gốc sẽ hiển thị ở đây"
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="#444"
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            />

        <!-- Kỹ năng -->
        <TextView
            android:id="@+id/textSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skill: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Điểm -->
        <TextView
            android:id="@+id/textScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:textColor="#008000"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold" />

        <!-- Feedback -->
        <TextView
            android:id="@+id/textFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback:"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Nút xem chi tiết đáp án -->
        <Button
            android:id="@+id/buttonShowExplanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem chi tiết đáp án"
            android:layout_marginBottom="16dp" />

        <!-- Giải thích chi tiết -->
        <LinearLayout
            android:id="@+id/explanationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="16dp" />

    </LinearLayout>
</ScrollView>
