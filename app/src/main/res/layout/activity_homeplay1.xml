<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".MainActivity">

    <!-- Phần trên nền cam -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_orange_section"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_top_orange_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_are_you_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:text="ARE YOU READY ?"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,375:309"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_are_you_ready"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ImageButton
            android:id="@+id/btnBack2"
            android:layout_width="68dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/bg_top_orange_rounded"
            android:contentDescription="Back"
            android:elevation="4dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toTopOf="@+id/text_are_you_ready"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Phần dưới nền trắng -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_white_section"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_orange_section">

        <TextView
            android:id="@+id/text_choose_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a Skill"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/skills_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <LinearLayout
            android:id="@+id/skills_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/text_choose_skill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_listening"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="🎧 Listening" />

            <Button
                android:id="@+id/btn_speaking"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="🗣️ Speaking"
                android:layout_marginTop="12dp"/>

            <Button
                android:id="@+id/btn_reading"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="📖 Reading"
                android:layout_marginTop="12dp"/>

            <Button
                android:id="@+id/btn_writing"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="✍️ Writing"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:indeterminateTint="#3498DB"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/skills_group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
