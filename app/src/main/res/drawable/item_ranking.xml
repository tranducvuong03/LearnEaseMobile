<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="8dp"
    android:background="@drawable/bg_item_ranking"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="4dp" android:elevation="2dp"> <TextView
    android:id="@+id/tvRank"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:background="@drawable/bg_rank_circle" android:gravity="center"
    android:text="4"
    android:textColor="#757575" android:textStyle="bold"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatar_placeholder"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_avatar_circle" app:layout_constraintStart_toEndOf="@id/tvRank"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Madelyn Dias"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="12dp" app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintTop_toTopOf="@id/imgAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"/> <TextView
        android:id="@+id/tvPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="590 points"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <ImageView
        android:id="@+id/imgFlag"
        android:layout_width="20dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_flag_india"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tvPoints"
        app:layout_constraintBottom_toBottomOf="@id/tvPoints" />

</androidx.constraintlayout.widget.ConstraintLayout>